<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SituationSelect"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="選擇目前狀態"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="#DA000000"
        android:shadowRadius="5"
        android:shadowDx="2"
        android:shadowDy="2"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Situation Select"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:shadowColor="#DA000000"
        android:shadowRadius="5"
        android:shadowDx="2"
        android:shadowDy="2"/>
    <ImageButton
        android:id="@+id/btn_work"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_work"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_marginTop="5dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <TextView
        android:id="@+id/string_work"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="@string/stateA"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="36dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:shadowColor="#DA000000"
        android:shadowRadius="5"
        android:shadowDx="2"
        android:shadowDy="2"
        />

    <ImageButton
        android:id="@+id/btn_relax"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/btn_relax"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_work" />

    <TextView
        android:id="@+id/string_relax"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="@string/stateB"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_work"
        android:shadowColor="#DA000000"
        android:shadowRadius="5"
        android:shadowDx="2"
        android:shadowDy="2"
        />

    <ImageButton
        android:id="@+id/btn_depress"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/btn_depress"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_relax" />

    <TextView
        android:id="@+id/string_depress"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:shadowColor="#DA000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="@string/stateC"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_relax" />

    <ImageButton
        android:id="@+id/btn_sleep"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/btn_sleep"
        android:scaleType="fitXY"
        android:background="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_depress"/>

    <Button
        android:id="@+id/btn_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:shadowColor="#00000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Jump"
        android:textColor="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/string_sleep"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="@string/stateD"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_depress"
        android:shadowColor="#DA000000"
        android:shadowRadius="5"
        android:shadowDx="2"
        android:shadowDy="2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>